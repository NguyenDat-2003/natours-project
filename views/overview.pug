extends base

block content
    main.main
        .card-container
            each tour in tours
                .card  
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src="img/tours/tour-1-1.jpg" alt="Tour 1")
                        h3.heading-tertirary
                            span The Forest Hiker
                    .card__details
                        h4.card__sub-heading Easy 3-days tour
                        p.card__text 
                            Breathtaking Nguyhasdgasjkdghjkasghdkjsah
                        .card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-map-pin")
                            span Miami, USA
                        .card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-calendar")
                            span 2021
                        .card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-flag")
                            span 3 stops
                        .card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-user")
                            span 12
                    .card__footer
                        p 
                            span.card__footer-value $297
                            span.card__footer-text   per person
                        p.card__ratings
                            span.card__footer-value 4.7
                            span.card__footer-text  rating (8)
                        a.btn.btn--green DETAILS
                


